<UserControl x:Class="AI_Note_Review.UCTagRegEx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AI_Note_Review"
             
             mc:Ignorable="d" 
             >
    <Grid Margin="0,0,0,10">
        <Grid.Resources>
            <local:CF x:Key="myCF"></local:CF>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <ComboBox Name="cbTagRegExType"
                      Margin="0,2,2,2"
                      ItemsSource="{Binding Source={StaticResource myCF}, Path=TagRegExTypes}"    
                  
                      SelectedValue="{Binding TagRegExType}" 
                      SelectionChanged="ComboBoxTagRegExType_SelectionChanged"  
                      DisplayMemberPath="TagRegExTypeTitle" 
                      SelectedValuePath="TagRegExTypeID"></ComboBox>
            <ComboBox 
                Margin="2" 
                Name="cbTargetSection" 
                ItemsSource="{Binding Source={StaticResource myCF}, Path=NoteSections}"
                Grid.Column="1" 
                SelectedValue="{Binding TargetSection}"
                SelectionChanged="CbTargetSection_SelectionChanged" 
                DisplayMemberPath="NoteSectionTitle" 
                SelectedValuePath="SectionID"></ComboBox>
            <Button VerticalAlignment="Center" HorizontalAlignment="leFT"
                    Margin="10,0,0,0"
                    Grid.Column="2"
                    Style="{StaticResource LinkButton}" 
                    Click="ButtonRemove_Click">Remove</Button>
        </Grid>
        <TextBlock FontSize="12" Foreground="Gray" Grid.ColumnSpan="3" Grid.Row="1" Style="{StaticResource MyTbStyle}" 
                   Text="{Binding ElementName=cbTagRegExType, Path=SelectedItem.TagRegExTypeDescription, FallbackValue=Type description}"></TextBlock>

        <Grid Grid.Row="2" Margin="0,2,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" 
                     Margin="10,0,5,0"
                     Text="{Binding RegExText, FallbackValue=Search Text}"
                     Foreground="Gray"
                     x:Name="tbRegExSearchTerms" 
                     Style="{StaticResource MyTextBox}" 
                     GotFocus="tbTitle_GotFocus" 
                     LostFocus="tbTitle_LostFocus"></TextBox>
            <Image ToolTip="Expand search term to a larger text box." Grid.Column="1" Tag="{Binding}" Source="/Icons/edit_notes.png" Width="15" MouseDown="Image_MouseDown" />

        </Grid>
        
    </Grid>
</UserControl>
