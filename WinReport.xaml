<Window x:Class="AI_Note_Review.WinReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AI_Note_Review"
        mc:Ignorable="d"
        Title="WinReport" Height="450" Width="800">
    <DockPanel Background="Black">
        <Label DockPanel.Dock="Top" Style="{StaticResource MyLblStyle}" FontSize="16" HorizontalAlignment="Center">Report</Label>
        <Button DockPanel.Dock="Bottom" Style="{StaticResource LinkButton}" HorizontalAlignment="Center">Close</Button>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" Grid.Column="0">
                <Label DockPanel.Dock="Top" Style="{StaticResource MyLblStyle}" FontSize="14" HorizontalAlignment="Center">Failed Checkpoints</Label>
                <ListBox DisplayMemberPath="CheckPointTitle" x:Name="lbFail" Margin="5" Style="{StaticResource MyListBox}"></ListBox>
            </DockPanel>
            <DockPanel Grid.Row="1" Grid.Column="0">
                <Label DockPanel.Dock="Top" Style="{StaticResource MyLblStyle}" FontSize="14" HorizontalAlignment="Center">Relavant Checkpoints</Label>
                <ListBox DisplayMemberPath="CheckPointTitle" x:Name="lbRelavant" Margin="5" Style="{StaticResource MyListBox}"></ListBox>
            </DockPanel>
            <DockPanel Grid.Row="0" Grid.Column="1">
                <Label DockPanel.Dock="Top" Style="{StaticResource MyLblStyle}" FontSize="14" HorizontalAlignment="Center">Passed Checkpoints</Label>
                <ListBox DisplayMemberPath="CheckPointTitle" x:Name="lbPassed" Margin="5" Style="{StaticResource MyListBox}"></ListBox>
            </DockPanel>
            <DockPanel Grid.Row="1" Grid.Column="1">
                <Label DockPanel.Dock="Top" Style="{StaticResource MyLblStyle}" FontSize="14" HorizontalAlignment="Center">Irrelavant Checkpoints</Label>
                <ListBox DisplayMemberPath="CheckPointTitle" x:Name="lbIrrelavant" Margin="5" Style="{StaticResource MyListBox}"></ListBox>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
